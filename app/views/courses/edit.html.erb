<%= provide :title, "Edit Course" %>
<html>
  <head>
    <title><%= yield(:title) %> | Course Registration System </title>
  </head>
  <body>
    <h1> Edit Course </h1>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for @course do |f| %>

          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        
          <%= f.label :description %>
          <%= f.text_field :description, class: "form-control" %>
        
          <%= f.label :credits %>
          <%= f.text_field :credits, class: "form-control" %>

          <%= f.submit "Edit course", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </body>
</html>
