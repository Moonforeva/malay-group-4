<%= provide :title, @user.name %>
<html>
  <head>
    <title><%= yield(:title) %> | Course Registration System </title>
  </head>
  <body>
    <div class="row">
      <aside class="col-md-4">
        <section class="user_info">
          <h1><%= gravatar_for @user %></h1>
            <pre>
              <b>Name: <%= @user.name %></b> 
              Email : <%= @user.email %>
            </pre>
        </section>
      </aside>
    </div>
  </body>
</html>
